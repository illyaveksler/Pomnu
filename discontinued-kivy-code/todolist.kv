#:include test/task.kv

<Line@Rectangle>
    size_hint: 1, 0.1

<TodoList@Widget>:
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            pos: self.pos
            size: self.size
<TodoList@BoxLayout+FloatLayout+BackgroundColor+Label+Widget>:
    id: list
    date: dateLabel
    addTask: addTaskButton
    BoxLayout:
        orientation: "vertical"
        FloatLayout:
            size_hint_y: 0.07
            id: float
            background_color: 1, 1, 1, 1
            orientation: "vertical"
            font_name: "assets/inter-font-family/Inter-Regular.ttf"
            color: 0, 0, 0, 0.7
            
            Image:
                source: "assets/options.png"
                pos_hint: {"center_x": .93, "center_y": .76}
                size_hint: 0.05, 0.05
                color: 0, 0, 0, 0.9
                Label:
                    text: "pomnu"
                    color: 0, 0, 0, 0.86
                    font_name: "assets/inter-font-family/Inter-Bold.ttf"
                    font_size: 22
                    x: self.parent.x - self.parent.width*17
                    y: self.parent.y - self.parent.height*6.5                
            Label:
                text: "Today"
                pos_hint: {"center_x":.23, "center_y":.27}
                font_name: "assets/inter-font-family/Inter-Medium.ttf"
                font_size: '28dp'
                color: 0, 0, 0, 1
            Label:
                id: dateLabel
                text: root.today
                font_size: '12dp'
                #font_features: we'll figure it out later
                font_name: "assets/inter-font-family/Inter-Medium.ttf"
                pos_hint: {"center_x":.419, "center_y":.2}
                color: 0, 0, 0, 0.7
        RecycleView:
            id: task_list
            viewclass: 'Task'
            size_hint_y: 0.42
            RecycleBoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: '5dp', '20dp', '100dp', '0dp'

        Button:
            id: addTaskButton
            background_normal: ''
            background_down: 'assets/Grey.png'
            text: "               Add a task"
            color: 0, 0, 0, 0.8
            text_size: self.size
            halign: 'left'
            valign: 'middle'
            font_size: '16dp'
            size_hint: 0.8, 0.03
            pos_hint: {"center_x":0.5, "center_y":.62}
            # - [ ] Make the borders rounder.
            # - [ ] Figure out how to use svg instad of png.
            Image: 
                source: "assets/plus.png"
                y: self.parent.y + self.parent.height/2.6
                x: self.parent.x + self.parent.width/28
                size: 14, 14
                allow_stretch: True
                color: 0, 0, 0, 0.8